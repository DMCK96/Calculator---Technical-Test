<h2>History</h2>

<table>
    <tr>
        <th>Calculations</th>
    </tr>
    @if (Model.Results.Any())
    {
        @foreach (var result in Model.Results)
        {
            <tr>
                <td>@result.Readable</td>
            </tr>
        }
    }
</table>


