@model GLTechnicalTest.Models.HomeViewModel

<h1>Hello! Look at this simple calculator!</h1>

<h2>Addition!</h2>
@using (Html.BeginForm("GetAdditionResult", "Calculator", FormMethod.Get))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <input type="number" name="start"/> <p>+</p> <input type="number" name="amount"/>
        <input type="submit" value="Submit"/>
    </fieldset>
}

<br/>

